<!-- app/views/flats/_form.html.erb -->
<%= simple_form_for(flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests %>
  <div class="mt-3">
    <%= f.submit class: "btn btn-primary ml-2" %>
    <%= link_to 'Cancel', flats_path, class: "btn btn-danger ml-2" %>
  </div>
<% end %>
