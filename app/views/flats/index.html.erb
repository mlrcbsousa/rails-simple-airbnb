<!-- app/views/flats/index.html.erb -->

<div class="row">
  <div class="col-xs-12">
    <h1>All our Flats (<%= @flats.count %>)</h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <p>You searched for $WHERE We found $VAR flats out of <strong><%= @flats.count %></strong> on our website.</p>
  </div>
</div>
<div class="row">

  <% @flats.each do |flat| %>

    <div class="col-xs-12 col-sm-4">
      <div class="flat-card">
        <div class="flat-card-image" style="background-image: url('https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200')"></div>
        <div class="flat-card-content">
          <div class="flat-card-title">
            <h4><%= flat.name %></h4>
          </div>
          <p><%= flat.address %></p>
          <div>
            <i class="fas fa-users"></i>
            <span><%= flat.number_of_guests %></span>
            <i class="fas fa-euro-sign"></i>
            <span><%= flat.price_per_night %></span>
          </div>
        </div>
        <div class="flat-card-actions">
          <%= link_to 'More info', flat_path(flat) %>
          <%= link_to 'Edit', edit_flat_path(flat), class: "ml-3 text-warning"%>
          <%= link_to 'Remove',
              flat_path(flat),
              method: :delete,
              data: { confirm: "Are you sure?" },
              class: "ml-3 text-danger" %>
        </div>
      </div>
    </div>

  <% end %>

</div>

