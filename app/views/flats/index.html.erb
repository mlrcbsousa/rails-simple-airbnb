<!-- app/views/flats/index.html.erb -->
<div class="container">

  <div class="row">
    <div class="col-xs-12">
      <h1>All our Flats <%= "(#{@total})" if @query.nil? %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <% unless @query.nil? %>
        <p>You searched for <em class="text-primary">"<%= @query %>"</em>.. We found <strong class="text-primary"><%= @flats.count %></strong> flats out of <strong><%= @total %></strong> on our website.</p>
      <% end %>
    </div>
  </div>
  <div class="row">

    <% @flats.each do |flat| %>

      <div class="col-xs-12 col-sm-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url(<%= flat.picture_url %>)"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div>
              <i class="fas fa-users"></i>
              <span><%= flat.number_of_guests %></span>
              <i class="fas fa-euro-sign"></i>
              <span><%= flat.price_per_night %></span>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to 'More info', flat_path(flat) %>
            <%= link_to 'Edit', edit_flat_path(flat), class: "ml-3 text-warning"%>
            <%= link_to 'Remove',
                flat_path(flat),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: "ml-3 text-danger" %>
          </div>
        </div>
      </div>

    <% end %>

  </div>

</div>
